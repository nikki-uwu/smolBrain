/dts-v1/;
#include <nordic/nrf52833_qdaa.dtsi>

//move to dtsi?
&pinctrl
{
    // SPI
	spi0_default: spi0_default {
		group1 {
			psels = <NRF_PSEL(SPIM_SCK , 1, 9)>,
					<NRF_PSEL(SPIM_MOSI, 0, 5)>,
					<NRF_PSEL(SPIM_MISO, 0, 4)>;
		};
	};

	spi0_sleep: spi0_sleep {
		group1 {
			psels = <NRF_PSEL(SPIM_SCK , 1, 9)>,
					<NRF_PSEL(SPIM_MOSI, 0, 5)>,
					<NRF_PSEL(SPIM_MISO, 0, 4)>;
			low-power-enable;
		};
	};

    // LEDs
	pwm0_default: pwm0_default {
		group1 {
			psels = <NRF_PSEL(PWM_OUT0, 0, 17)>, // Red
					<NRF_PSEL(PWM_OUT1, 0, 20)>, // Green
					<NRF_PSEL(PWM_OUT2, 0, 15)>; // Blue
			nordic,drive-mode = <NRF_DRIVE_D0S1>;
			nordic,invert;
		};
	};

	pwm0_sleep: pwm0_sleep {
		group1 {
			psels = <NRF_PSEL(PWM_OUT0, 0, 17)>, // Red
					<NRF_PSEL(PWM_OUT1, 0, 20)>, // Green
					<NRF_PSEL(PWM_OUT2, 0, 15)>; // Blue
			low-power-enable;
		};
	};
};
//end

/ {
	model = "nikkismolbrain_r3_uf2";
	compatible = "nikkismolbrain_r3_uf2";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &cdc_acm_uart0;
		zephyr,shell-uart = &cdc_acm_uart0;
	};

	pwmleds {
		compatible = "pwm-leds";
		pwm_led0: pwm_led_0 {
			pwms = <&pwm0 0 PWM_MSEC(1) PWM_POLARITY_INVERTED>;
		};
		pwm_led1: pwm_led_1 {
			pwms = <&pwm0 1 PWM_MSEC(1) PWM_POLARITY_INVERTED>;
		};
		pwm_led2: pwm_led_2 {
			pwms = <&pwm0 2 PWM_MSEC(1) PWM_POLARITY_INVERTED>;
		};
	};

    leds {
        compatible = "gpio-leds";
        led0: led_0 {
            gpios = <&gpio0 17 (GPIO_OPEN_DRAIN | GPIO_ACTIVE_LOW)>;
        };
        led1: led_1 {
            gpios = <&gpio0 20 (GPIO_OPEN_DRAIN | GPIO_ACTIVE_LOW)>;
        };
        led2: led_2 {
            gpios = <&gpio0 15 (GPIO_OPEN_DRAIN | GPIO_ACTIVE_LOW)>;
        };
    };

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 29 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push button switch 0";
		};
	};

	aliases {
		sw0 = &button0;
		pwm-led0 = &pwm_led0;
		pwm-led1 = &pwm_led1;
		pwm-led2 = &pwm_led2;
		led0 = &led0;
		led1 = &led1;
		led2 = &led2;
	};

	battery-divider {
		compatible = "voltage-divider";
		status = "okay";
		io-channels = <&adc 1>; // ADC PIN P0.03_AIN1
		output-ohms = <1000000>;
		full-ohms = <(2063882)>;
		power-gpios = <&gpio0 2 (GPIO_OPEN_DRAIN | GPIO_ACTIVE_LOW)>; // Voltage Divider ground pin which is open drain P0.02_AIN0
	};

	zephyr,user {
		int0-gpios = <&gpio0 30 0>;
		chg-gpios = <&gpio0 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
		stby-gpios = <&gpio0 9 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
		clk-gpios = <&gpio0 28 (GPIO_ACTIVE_HIGH| GPIO_PULL_DOWN)>;
	};
};

&reg1 {
	regulator-initial-mode = <NRF5X_REG_MODE_DCDC>; // NIKKI smolBrain - sets internal DCDC instead of LDO
};

&adc {
	status = "okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&spi0 {
	status = "okay";
	compatible = "nordic,nrf-spim";
	cs-gpios = <&gpio0 11 GPIO_ACTIVE_LOW>;
	
	pinctrl-0 = <&spi0_default>;
	pinctrl-1 = <&spi0_sleep>;
	pinctrl-names = "default", "sleep";
	
	clock-frequency = < DT_FREQ_M(10) >;

	imu_spi: imu_spi@0 {
		status = "okay";
		compatible = "vnd,spi-device";
		label = "imu-spi";
		reg = <0>;
		
		spi-max-frequency = <DT_FREQ_M(24)>;
		
		// MAG on aux I2C yet not supported #77
	};
};

&pwm0 {
	status = "okay";
	pinctrl-0 = <&pwm0_default>;
	pinctrl-1 = <&pwm0_sleep>;
	pinctrl-names = "default", "sleep";
};

zephyr_udc0: &usbd {
	compatible = "nordic,nrf-usbd";
	status = "okay";
	cdc_acm_uart0: cdc_acm_uart0 {
		compatible = "zephyr,cdc-acm-uart";
	};
};

&nfct {
	status = "disabled";
};
